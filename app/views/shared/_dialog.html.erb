<div id="<%= id %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="<%= id %>-label" aria-hidden="true">
 <div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 id="<%= id %>-label"><%= title %></h3>
 </div>
 <div class="modal-body">
  <% body_block.call %>
 </div>
 <div class="modal-footer">
  <button class="btn btn-close <%= cancel_class %>" data-dismiss="modal" aria-hidden="true"><%= cancel_label %></button>
<% if action %>
  <button class="btn <%= action[:class] %>" data-action="<%= action[:action] %>"><%= action[:label] %></button>
<% end %>
 </div>
</div>